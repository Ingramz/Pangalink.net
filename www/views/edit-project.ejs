<form action="/projects/edit" method="post" class="form-horizontal">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="page-header">
        <h1>Muuda makselahenduse andmeid</h1>
    </div>

    <% include project-form %>

    <h3>Sertifikaadi valikud</h3>

    <hr />

    <div class="form-group<% if(validation.keyBitsize){%> has-error<%}%>">
        <label class="col-lg-2 control-label" for="keyBitsize">Allkirjastamise algoritm</label>
        <div class="col-lg-8">
            <select class="form-control" name="keyBitsize" id="keyBitsize">
                <option <% if(keyBitsize == 1024){ %> selected<% } %> value="1024">1024 bitti</option>
                <option <% if(keyBitsize == 2048 || !keyBitsize){ %> selected<% } %> value="2048">2048 bitti</option>
                <option <% if(keyBitsize == 4096){ %> selected<% } %> value="4096">4096 bitti</option>
            </select>
            <% if(validation.keyBitsize){%>
                <span class="help-block"><%= validation.keyBitsize %></span>
            <%}%>
            <span class="help-block">Võtme pikkuse vahetamine mõjutab ainult edaspidi genereeritavaid võtmeid, aga mitte hetkel kasutusel olevat</span>
        </div>
    </div>

    <div class="form-group<% if(validation.regenerate){%> has-error<%}%>">
        <div class="col-lg-2"></div>
        <label class="col-lg-8">
            <input type="checkbox" name="regenerate" value="true">
            Genereeri uus sertifikaat (vana sertifikaat kaotab kehtivuse)
        </label>
    </div>

    <div class="form-group">
        <label class="col-lg-2"></label>
        <div class="col-lg-8">
            <div class="pull-right">
                <a class="btn btn-danger" href="/projects/delete/<%= id %>" onclick="return confirm('Kas oled ikka kindel, seda otsust ei ole võimalik hiljem enam tagasi võtta?')"><span class="glyphicon glyphicon-minus-sign"></span> Kustuta see makselahendus</a>
            </div>
            <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span> Muuda makselahenduse andmeid</button>
        </div>
    </div>
</form>
